    <galaxy_setting name="BoringNecroNames" is_partial_record="true" subcategory="Vanilla"/>
    <galaxy_setting name="CrippledFlagshipCanPracticeNecromancy" is_partial_record="true" subcategory="Vanilla"/>
    <galaxy_setting name="ForgivingNecromancy" is_partial_record="true" subcategory="Vanilla"/>
    <galaxy_setting name="SkeletonDecayInterval" is_partial_record="true" subcategory="Vanilla"/>
    <galaxy_setting name="WightDecayInterval" is_partial_record="true" subcategory="Vanilla"/>
    <galaxy_setting name="BonusNecromancerResources" is_partial_record="true" subcategory="Vanilla"/>
    <galaxy_setting name="BonusNecromancerSockets" is_partial_record="true" subcategory="Vanilla"/>
    <galaxy_setting name="BonusNecromancerRiftOptions" is_partial_record="true" subcategory="Vanilla"/>
    <galaxy_setting name="NecromancerScarceResources" is_partial_record="true" subcategory="Vanilla"/>
